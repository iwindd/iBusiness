// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 Int                  @id @default(autoincrement())
  email              String               @unique
  password           String
  displaytitle       String
  title              String
  address            String
  area               String
  district           String
  firstname          String
  lastname           String
  postalcode         String
  provice            String
  tel                String
  Product            Product[]
  Order              Order[]
  OrderReceiptDesign OrderReceiptDesign[]
  Activity           Activity[]
}

model Category {
  id          Int       @id @default(autoincrement())
  application Int
  title       String
  createdAt   DateTime  @default(now())
  products    Product[]
}

model Product {
  id          Int      @id @default(autoincrement())
  retail      Boolean  @default(true)
  serial      String
  title       String
  price       Int      @default(0)
  cost        Int      @default(0)
  stock       Int      @default(0)
  sold        Int      @default(0)
  user        User     @relation(fields: [application], references: [id])
  application Int
  category    Category @relation(fields: [categoryId], references: [id])
  categoryId  Int
  favorite    Boolean  @default(false)
  keywords    String   @default("")
}

model Order {
  id           Int            @id @default(autoincrement())
  retail       Boolean        @default(true)
  price        Int
  cost         Int
  profit       Int
  type         Int
  note         String
  user         User           @relation(fields: [application], references: [id])
  application  Int
  productsText String
  products     OrderProduct[]
  createdAt    DateTime       @default(now())
}

model OrderProduct {
  id        Int      @id @default(autoincrement())
  retail    Boolean  @default(true)
  order     Order    @relation(fields: [orderId], references: [id])
  orderId   Int
  serial    String
  title     String
  category  String
  price     Int
  cost      Int
  count     Int
  createdAt DateTime @default(now())
  overStock Boolean  @default(false)
}

model OrderReceiptDesign {
  id          Int     @id @default(autoincrement())
  global      Boolean @default(false)
  user        User    @relation(fields: [application], references: [id])
  application Int
  logo        String
  title       String
  design      Json
}

model Activity {
  id          Int      @id @default(autoincrement())
  user        User     @relation(fields: [application], references: [id])
  application Int
  category    String
  type        String
  payload     Json
  createdAt   DateTime @default(now())
}
